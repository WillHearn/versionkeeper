<%- model_class = Release -%>
<div class="page-header">
  <h1><%=t '.title', :default => @release.date %></h1>
</div>

<dl class="dl-horizontal-left">
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @release.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:accounts) %>:</strong></dt>
  <dd><%= @release.accounts %></dd>
  <dt><strong><%= model_class.human_attribute_name(:accounts_extra) %>:</strong></dt>
  <dd><%= @release.accounts_extra %></dd>
  <dt><strong><%= model_class.human_attribute_name(:addons) %>:</strong></dt>
  <dd><%= @release.addons %></dd>
  <dt><strong><%= model_class.human_attribute_name(:collaborate) %>:</strong></dt>
  <dd><%= @release.collaborate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:help) %>:</strong></dt>
  <dd><%= @release.help %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mysageone) %>:</strong></dt>
  <dd><%= @release.mysageone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payroll) %>:</strong></dt>
  <dd><%= @release.payroll %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @release.notes %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              releases_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_release_path(@release), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              release_path(@release),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
