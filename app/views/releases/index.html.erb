  <dd><%= @next_release.mysageone %></dd>
  <dt><strong><%= (:payroll).to_s.titleize %>:</strong></dt>
  <dd><%= @next_release.payroll %></dd>
  <dt><strong><%= (:notes).to_s.titleize %>:</strong></dt>
  <dd><%= truncate(@next_release.notes) %></dd>
</dl>
<% else %>
