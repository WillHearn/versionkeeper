<%- model_class = Release -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<% if @releases.present? %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:accounts) %></th>
      <th><%= model_class.human_attribute_name(:accounts_extra).titleize %></th>
      <th><%= model_class.human_attribute_name(:addons) %></th>
      <th><%= model_class.human_attribute_name(:collaborate) %></th>
      <th><%= model_class.human_attribute_name(:help) %></th>
      <th><%= model_class.human_attribute_name(:mysageone) %></th>
      <th><%= model_class.human_attribute_name(:payroll) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
  <% @releases.each do |release| %>
    <tr>
    <td><%= link_to release.date, release_path(release) %></td>
    <td><%= release.accounts || Release.previous_release(release.date).accounts || "-" %></td>
    <td><%= release.accounts_extra || Release.previous_release.accounts_extra || "-" %></td>
    <td><%= release.addons || @last_release.addons || "-" %></td>
    <td><%= release.collaborate || @last_release.collaborate || "-" %></td>
    <td><%= release.help || @last_release.help || "-" %></td>
    <td><%= release.mysageone || @last_release.mysageone || "-" %></td>
    <td><%= release.payroll || @last_release.payroll || "-" %></td>
    <td><%= truncate(release.notes) || "-" %></td>
    <td>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_release_path(release), :class => 'btn btn-mini' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        release_path(release),
        :method => :delete,
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-mini btn-danger' %>
    </td>
    </tr>
  <% end %>
    </tbody>
  </table>
<% else %>
    <p>There are no releases.</p>
<% end %>

  <%= link_to t('.new', :default => t("helpers.links.new")),
    new_release_path,
    :class => 'btn btn-primary' %>

  <center><%= paginate @releases %></center>

<% content_for :sidebar do %>
